                        <Style TargetType="CheckBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Border>
                                            <SymbolIcon Symbol="Download"></SymbolIcon>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Content" Value=""></Setter>
                        </Style>
                    </CheckBox>-->
                    <!--<Button x:Name="RetrieveDataButton" Grid.Column="2" Background="Transparent" Padding="0" IsEnabled="True" Click="RetrieveDataButton_Click" >-->
                    <!--<Border 
                            BorderBrush="Green"
                            Background="Transparent"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="0"
                            Grid.Column="2"
                            Tapped="Border_Tapped">
                        <SymbolIcon Symbol="Download" Foreground="Green" Width="28"></SymbolIcon>
                    </Border>-->

                    <!--</Button>-->

                    <Button 
                        x:Name="RetrieveDataButton"
                        Grid.Column="2"
                        Style="{StaticResource SignalRTemplateDownload}"
                        IsEnabled="False"
                        BorderBrush="LightGray"
                        BorderThickness="2"
                        CornerRadius="3"
                        Click="RetrieveDataButton_Click">

                    </Button>
                </Grid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Grid.Row="1" x:Name="TrackButton" Click="TrackButton_Click" Padding="0" HorizontalAlignment="Right" Background="Transparent">
                        <SymbolIcon Symbol="CalendarWeek" Foreground="Navy" HorizontalAlignment="Right" Margin="0"></SymbolIcon>
                    </Button>
                    <Button Grid.Row="1" x:Name="DeleteButton" Click="DeleteButton_Click" HorizontalAlignment="Right" Padding="0" Margin="0" Background="Transparent">
                        <SymbolIcon Symbol="Delete" Foreground="Red"></SymbolIcon>
                    </Button>
                    <!--<ToggleButton Padding="0">
                        <SymbolIcon Symbol="CalendarWeek" Foreground="Navy" HorizontalAlignment="Center" Margin="0"></SymbolIcon>
                    </ToggleButton>-->
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
